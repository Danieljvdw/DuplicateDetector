<Window x:Class="DuplicateDetector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DuplicateDetector.ViewModels"
        mc:Ignorable="d"
        Title="Duplicate Detector" Height="600" Width="900">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Button Content="Add Folder" Command="{Binding AddFolderCommand}" Width="100"/>
            <Button Content="Scan" Command="{Binding ScanCommand}" Width="100"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100"/>
            <Button Content="Delete Selected" Command="{Binding DeleteSelectedCommand}" Width="120"/>
            <TextBlock Text="Selected Algorithm:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox ItemsSource="{Binding CompareAlgorithms}" SelectedItem="{Binding SelectedAlgorithm, Mode=TwoWay}"/>
        </StackPanel>

        <!-- Files List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding FilesView}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="False" PreviewMouseLeftButtonDown="FilesDataGrid_PreviewMouseLeftButtonDown">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Filename" Binding="{Binding Filename}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Size (Bytes)" Binding="{Binding Size}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Hash" Binding="{Binding HashString}" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="State" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding FileStates}"
                                      SelectedItem="{Binding State, Mode=TwoWay}"
                                      IsReadOnly="True"
                                      IsHitTestVisible="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding FileStates}"
                                      SelectedItem="{Binding State, Mode=TwoWay}"
                                      IsDropDownOpen="True"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Progress and Stats -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
            <ProgressBar Width="300" Height="20" Value="{Binding ProgressValue}" Maximum="100"/>
            <TextBlock Text="{Binding TotalData, StringFormat=Total: {0:N0} bytes}" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding UniqueData, StringFormat=Unique: {0:N0} bytes}" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding DeleteData, StringFormat=To Delete: {0:N0} bytes}" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
